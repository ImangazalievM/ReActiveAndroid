<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="left|center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:tint="#546E7A"
        app:srcCompat="@drawable/ic_add_grey_24dp" />

    <EditText
        android:id="@+id/folder_name_text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:background="@null"
        android:hint="@string/create_new_folder"
        android:imeOptions="actionDone"
        android:nextFocusDown="@id/focus_holder"
        android:paddingLeft="3dp"
        android:singleLine="true"
        android:textColorHint="@color/md_grey_500" />

    <!-- Dummy view for receiving focus after editing is complete -->
    <View
        android:id="@+id/focus_holder"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ImageButton
        android:id="@+id/done_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="right|center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:tint="@color/md_green_A700"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_done_white_24dp" />

</FrameLayout>